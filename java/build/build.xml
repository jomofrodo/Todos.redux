<project xmlns:ivy="antlib:org.apache.ivy.ant" name="Todos.redux" default="resolve">
    
    <property name="lib.dir" value="../../www/WEB-INF/lib" />
	
    <!-- ================================= 
          target: resolve              
         ================================= -->
    <target name="resolve" description="--> retrieve dependencies with ivy">
        <ivy:resolve />
    </target>
    
    <target name="retrieve" description="--> retrieve dependencies with ivy">
        <ivy:retrieve type="jar,source,doc" conf="dev" pattern="${lib.dir}/[conf]/[artifact]-[type]-[revision].[ext]"/>
        <ivy:retrieve type="jar" conf="prod" pattern="${lib.dir}/[conf]/[artifact]-[type]-[revision].[ext]"/>
         
    </target>
</project>